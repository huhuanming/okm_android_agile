<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="54dp">

        <CheckBox
            android:id="@+id/checkbox1"
            android:layout_width="22.5dp"
            android:layout_height="22.5dp"
            android:layout_marginRight="18dp"
            style="@style/CheckBoxStar"
            android:layout_alignTop="@+id/checkbox2"
            android:layout_toLeftOf="@+id/checkbox2" />
        <CheckBox
            android:id="@+id/checkbox2"
            android:layout_width="22.5dp"
            android:layout_height="22.5dp"
            android:layout_marginRight="18dp"
            style="@style/CheckBoxStar"
            android:layout_alignTop="@+id/checkbox3"
            android:layout_toLeftOf="@+id/checkbox3" />
        <CheckBox
            android:id="@+id/checkbox3"
            android:layout_width="22.5dp"
            android:layout_height="22.5dp"
            style="@style/CheckBoxStar"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
        <CheckBox
            android:id="@+id/checkbox4"
            android:layout_width="22.5dp"
            android:layout_height="22.5dp"
            android:layout_marginLeft="18dp"
            style="@style/CheckBoxStar"
            android:layout_alignTop="@+id/checkbox3"
            android:layout_toRightOf="@+id/checkbox3" />
        <CheckBox
            android:id="@+id/checkbox5"
            android:layout_width="22.5dp"
            android:layout_height="22.5dp"
            android:layout_marginLeft="18dp"
            style="@style/CheckBoxStar"
            android:layout_alignTop="@+id/checkbox4"
            android:layout_toRightOf="@+id/checkbox4" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="22.5dp"
        android:layout_marginRight="22.5dp"
        android:background="#cccccc">
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48.5dp"
        android:layout_marginLeft="22.5dp"
        android:layout_marginRight="22.5dp">

        <EditText
            android:id="@+id/et_comment_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10.5dp"
            android:hint="@string/title"
            android:textColor="#b2b2b2"
            android:textSize="18sp"
            android:background="#ffffff"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#cccccc"
        android:layout_marginLeft="22.5dp"
        android:layout_marginRight="22.5dp">
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="22.5dp"
        android:layout_marginRight="22.5dp">

        <EditText
            android:id="@+id/et_comment"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10.5dp"
            android:layout_marginRight="10.5dp"
            android:textColor="#999999"
            android:textSize="18sp"
            android:hint="@string/comment"
            android:background="#ffffff"
            android:layout_marginBottom="2dp"
            android:gravity="left|top"
            android:layout_marginTop="11.5dp"/>

    </RelativeLayout>
</LinearLayout>
