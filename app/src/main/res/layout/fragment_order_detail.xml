<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff">

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/address_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11.5dp"
                        android:layout_marginLeft="22.5dp"
                        android:textSize="15.75sp"
                        android:textColor="#333333"
                        android:gravity="center_vertical"
                        android:text="用于显示姓名" />

                    <TextView
                        android:id="@+id/address_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="用于显示电话号码"
                        android:layout_marginTop="16dp"
                        android:textSize="13.5sp"
                        android:layout_marginLeft="22.5dp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/address_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:text="用于显示地址"
                        android:textSize="13.5sp"
                        android:layout_marginBottom="11.5dp"
                        android:layout_marginLeft="22.5dp"
                        android:textColor="#666666" />

                </LinearLayout>

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="90dp"
                    android:id="@+id/order_address_change"
                    android:src="@drawable/more"
                    android:layout_marginRight="22.5dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="#ffffff"
                android:orientation="vertical"
                android:layout_marginTop="11.5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="44.5dp" >

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="22.5dp"
                        android:text="@string/small_ticket"
                        android:textColor="#333333"
                        android:textSize="15.75sp" />

                    <CheckBox
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="22.5dp"
                    android:background="#e6e6e6" >
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/setting_clean_cache"
                    android:layout_width="match_parent"
                    android:layout_height="44.5dp"
                    android:background="@drawable/selector">

                    <TextView
                        android:id="@+id/show_food_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="22.5dp"
                        android:text="@string/commercial_ticket"
                        android:textColor="#333333"
                        android:textSize="15.75sp" />

                    <CheckBox
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="11.5dp"
                android:background="#ffffff"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/setting_app_advise"
                    android:layout_width="match_parent"
                    android:layout_height="44.5dp"
                    android:background="@drawable/selector" >

                    <TextView
                        android:id="@+id/advise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="22.5dp"
                        android:gravity="left|center_vertical"
                        android:text="@string/instant_send"
                        android:textColor="#333333"
                        android:textSize="15.75sp" />

                    <CheckBox
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="22.5dp"
                    android:background="#e6e6e6" >
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/setting_app_mark"
                    android:layout_width="match_parent"
                    android:layout_height="44.5dp"
                    android:background="@drawable/selector" >

                    <TextView
                        android:id="@+id/mark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="22.5dp"
                        android:gravity="left|center_vertical"
                        android:text="@string/appoint_send"
                        android:textColor="#333333"
                        android:textSize="15.75sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="显示时间"
                        android:textColor="#666666"
                        android:layout_marginRight="20dp"
                        android:textSize="11.25sp"
                        android:layout_alignBottom="@+id/mark"
                        android:layout_toLeftOf="@+id/order_appoint_change" />
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="22.5dp"
                        android:id="@+id/order_appoint_change"
                        android:src="@drawable/more" />

                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44.5dp"
                android:layout_marginTop="11.5dp"
                android:background="#ffffff">
                <RelativeLayout
                    android:id="@+id/setting_update"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/selector"
                    android:clickable="true" >

                    <TextView
                        android:id="@+id/update_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="22.5dp"
                        android:gravity="left|center_vertical"
                        android:text="@string/order_note"
                        android:textColor="#333333"
                        android:textSize="15.75sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="辣一点，不要放葱，少放蒜，多盛一些..."
                        android:textSize="11.25sp"
                        android:textColor="#666666"
                        android:layout_marginLeft="20dp"
                        android:layout_alignBottom="@+id/update_text"
                        android:layout_toRightOf="@+id/update_text" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="22.5dp"
                        android:id="@+id/order_note_change"
                        android:src="@drawable/more" />

                </RelativeLayout>
            </RelativeLayout>
            
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="11.5dp"
                android:clickable="true"
                android:gravity="center"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sure_place_order"
                    android:textColor="#ffffff"
                    android:textSize="20.25dp"/>
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
